{
  "name": "@cumulus/discover-granules",
  "version": "1.3.0",
  "description": "Discover Granules in FTP/HTTP/SFTP endpoints",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cumulus-nasa/cumulus"
  },
  "scripts": {
    "test": "ava",
    "local": "node index.js | pino",
    "build": "rm -rf dist && mkdir dist && cp -R schemas dist/ && webpack --progress",
    "watch": "rm -rf dist && mkdir dist && cp -R schemas dist/ && webpack --progress -w",
    "postinstall": "npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "files": "tests",
    "color": false,
    "babel": "inherit",
    "require": [
      "babel-polyfill",
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "es2017"
    ]
  },
  "author": "Cumulus Authors",
  "license": "Apache-2.0",
  "dependencies": {
    "@cumulus/common": "^1.3.0",
    "@cumulus/cumulus-message-adapter-js": "^1.0.1",
    "@cumulus/ingest": "^1.3.0",
    "@cumulus/test-data": "^1.3.0",
    "babel-core": "^6.25.0",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2017": "^6.24.1",
    "json-loader": "~0.5.7",
    "lodash.get": "^4.4.2",
    "webpack": "~1.12.13"
  },
  "devDependencies": {
    "@ava/babel-preset-stage-4": "^1.1.0",
    "@ava/babel-preset-transform-test-files": "^3.0.0",
    "ava": "^0.23.0",
    "fs-extra": "^5.0.0",
    "lodash.clonedeep": "^4.5.0"
  }
}
